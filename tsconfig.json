{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "types": ["jest", "node"],
    "alwaysStrict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./distribution/types",
    "outDir": "./distribution/sources",
    "baseUrl": "."
  },
  "include": [
    "sources/**/*"
  ],
  "exclude": [
    "sources/next/**/*",
    "node_modules",
    "**/*.spec.ts"
  ]
}
