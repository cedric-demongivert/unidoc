{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "types": ["jest", "node"],
    "alwaysStrict": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./distribution/types",
    "outDir": "./distribution/src",
    "baseUrl": ".",
    "paths": {
      "@grammar/*": ["sources/generated/*"],
      "@library/*": ["sources/typescript/*"]
    }
  },
  "include": [
      "sources/typescript/**/*",
      "sources/generated/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
